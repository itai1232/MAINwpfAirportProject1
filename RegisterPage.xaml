<Page x:Class="MAINwpfAirportProject.RegisterPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MAINwpfAirportProject"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="RegisterPage">

    <Grid>
        <Image Source="D:\MAINwpfAirportProject\pictures\betterRegisterPic.png"
               Stretch="UniformToFill"/>
        <Border Width="40"
Height="40"
CornerRadius="19"
Background="#AAFFFFFF"
HorizontalAlignment="Left"
VerticalAlignment="Top"
Margin="20">

            <Button Content="X"
    FontSize="30"
    FontWeight="Bold"
    Background="Transparent"
    BorderThickness="0"
    Cursor="Hand"
    Click="BackToHome_Click"/>
        </Border>

        <Border
        Width="380"
        Padding="25"
        Background="#AAFFFFFF"
        CornerRadius="12"
        HorizontalAlignment="Center"
        VerticalAlignment="Center">

        <StackPanel>

            <TextBlock Text="Register"
                       FontSize="26"
                       FontWeight="Bold"
                       Margin="0,0,0,20"
                       HorizontalAlignment="Center"/>

            <!-- First Name -->
            <!--<TextBlock Text="First Name" FontSize="12" Foreground="Gray"/>
            <TextBox Height="35" Margin="0,0,0,10" Padding="8"/>-->
                <TextBlock Text="First Name" FontSize="12" Foreground="Gray"/>
                <TextBox x:Name="FirstNameTextBox"
         Height="35"
         Padding="8"
         VerticalContentAlignment="Center"/>
                <TextBlock x:Name="FirstNameError"
           Height="14"
           FontSize="11"
           Foreground="Red"
           Visibility="Hidden"
           Margin="0,2,0,6"/>

                <!-- Last Name -->
            <!--<TextBlock Text="Last Name" FontSize="12" Foreground="Gray"/>
            <TextBox Height="35" Margin="0,0,0,10" Padding="8"/>-->
                <TextBlock Text="Last Name" FontSize="12" Foreground="Gray"/>
                <TextBox x:Name="LastNameTextBox"
         Height="35"
         Padding="8"
         VerticalContentAlignment="Center"/>
                <TextBlock x:Name="LastNameError"
           Height="14"
           FontSize="11"
           Foreground="Red"
           Visibility="Hidden"
           Margin="0,2,0,6"/>

                <!-- Phone Number -->
            <!--<TextBlock Text="Phone Number" FontSize="12" Foreground="Gray"/>
            <TextBox Height="35" Margin="0,0,0,10" Padding="8"/>-->
                <TextBlock Text="Phone" FontSize="12" Foreground="Gray"/>
                <TextBox x:Name="PhoneTextBox"
         Height="35"
         Padding="8"
         VerticalContentAlignment="Center"/>
                <TextBlock x:Name="PhoneError"
           Height="14"
           FontSize="11"
           Foreground="Red"
           Visibility="Hidden"
           Margin="0,2,0,6"/>

                <!-- Email -->
            <!--<TextBlock Text="Email" FontSize="12" Foreground="Gray"/>
            <TextBox Height="35" Margin="0,0,0,10" Padding="8"/>-->
                <TextBlock Text="Email" FontSize="12" Foreground="Gray"/>
                <TextBox x:Name="EmailTextBox"
         Height="35"
         Padding="8"
         VerticalContentAlignment="Center"/>
                <TextBlock x:Name="EmailError"
           Height="14"
           FontSize="11"
           Foreground="Red"
           Visibility="Hidden"
           Margin="0,2,0,6"/>

                <!-- Country -->
            <TextBlock Text="Country" FontSize="12" Foreground="Gray"/>
            <ComboBox x:Name="countriesscrollview" SelectionChanged="SelectCountry"
                     Height="35" Margin="0,0,0,10" Padding="8"/>
                



                <!-- Create Account -->
            <Button Content="Create Account" Click="Register_Click"
                    Height="38"
                    FontWeight="Bold"
                    Background="#FF2D89EF"
                    Foreground="White"
                    />

            <!-- Already have an account -->
            <Button Content="Already have an account?"
                    Margin="0,12,0,0"
                    Background="Transparent"
                    BorderThickness="0"
                    Foreground="#FF2D89EF"
                    HorizontalAlignment="Center"
                    Click="BackToLogin_Click"/>

        </StackPanel>
    </Border>
    </Grid>
</Page>
