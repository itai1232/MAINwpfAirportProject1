<Page x:Class="MAINwpfAirportProject.RegisterPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MAINwpfAirportProject"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="RegisterPage">

    <Grid>
        <Image Source="D:\MAINwpfAirportProject\betterRegisterPic.png"
               Stretch="UniformToFill"/>

        <Border
        Width="380"
        Padding="25"
        Background="#AAFFFFFF"
        CornerRadius="12"
        HorizontalAlignment="Center"
        VerticalAlignment="Center">

        <StackPanel>

            <TextBlock Text="Register"
                       FontSize="26"
                       FontWeight="Bold"
                       Margin="0,0,0,20"
                       HorizontalAlignment="Center"/>

            <!-- First Name -->
            <TextBlock Text="First Name" FontSize="12" Foreground="Gray"/>
            <TextBox Height="32" Margin="0,0,0,10" Padding="8"/>

            <!-- Last Name -->
            <TextBlock Text="Last Name" FontSize="12" Foreground="Gray"/>
            <TextBox Height="32" Margin="0,0,0,10" Padding="8"/>

            <!-- Phone Number -->
            <TextBlock Text="Phone Number" FontSize="12" Foreground="Gray"/>
            <TextBox Height="32" Margin="0,0,0,10" Padding="8"/>

            <!-- Email -->
            <TextBlock Text="Email" FontSize="12" Foreground="Gray"/>
            <TextBox Height="32" Margin="0,0,0,10" Padding="8"/>

            <!-- Country -->
            <TextBlock Text="Country" FontSize="12" Foreground="Gray"/>
            <ComboBox x:Name="countriesscrollview" SelectionChanged="SelectCountry"
                     Height="32" Margin="0,0,0,10" Padding="8"/>

                <!-- Password -->            
                <TextBlock Text="Password" FontSize="12" Foreground="Gray"/>
                <Grid Height="32" Margin="0,0,0,10">
                    <TextBox x:Name="PasswordTextBox" 
             Padding="8" 
             Visibility="Collapsed"
             TextChanged="Password_Changed"/>
                    <PasswordBox x:Name="PasswordBox" 
                 Padding="8"
                 PasswordChanged="Password_Changed"/>
                    <Button x:Name="TogglePasswordButton"
            Content="👁"
            Width="30"
            Height="30"
            HorizontalAlignment="Right"
            VerticalAlignment="Center"
            Margin="0,0,5,0"
            Background="Transparent"
            BorderThickness="0"
            Click="TogglePassword_Click"
            Cursor="Hand"/>
                </Grid>

                <!-- Confirm Password -->
                <TextBlock Text="Confirm Password" FontSize="12" Foreground="Gray"/>
                <Grid Height="32" Margin="0,0,0,20">
                    <TextBox x:Name="ConfirmPasswordTextBox" 
             Padding="8" 
             Visibility="Collapsed"
             TextChanged="ConfirmPassword_Changed"/>
                    <PasswordBox x:Name="ConfirmPasswordBox" 
                 Padding="8"
                 PasswordChanged="ConfirmPassword_Changed"/>
                    <Button x:Name="ToggleConfirmPasswordButton"
            Content="👁"
            Width="30"
            Height="30"
            HorizontalAlignment="Right"
            VerticalAlignment="Center"
            Margin="0,0,5,0"
            Background="Transparent"
            BorderThickness="0"
            Click="ToggleConfirmPassword_Click"
            Cursor="Hand"/>
                </Grid>

                <!-- Create Account -->
            <Button Content="Create Account"
                    Height="38"
                    FontWeight="Bold"
                    Background="#FF2D89EF"
                    Foreground="White"/>

            <!-- Already have an account -->
            <Button Content="Already have an account?"
                    Margin="0,12,0,0"
                    Background="Transparent"
                    BorderThickness="0"
                    Foreground="#FF2D89EF"
                    HorizontalAlignment="Center"
                    Click="BackToLogin_Click"/>

        </StackPanel>
    </Border>
    </Grid>
</Page>
