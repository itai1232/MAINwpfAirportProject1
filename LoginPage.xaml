<Page x:Class="MAINwpfAirportProject.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MAINwpfAirportProject"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LoginPage">

    <Grid>
        <Image Source="D:\MAINwpfAirportProject\pictures\betterRegisterPic.png"
       Stretch="UniformToFill"/>
        <Border Width="40"
        Height="40"
        CornerRadius="19"
        Background="#AAFFFFFF"
        HorizontalAlignment="Left"
        VerticalAlignment="Top"
        Margin="20">

            <Button Content="X"
            FontSize="30"
            FontWeight="Bold"
            Background="Transparent"
            BorderThickness="0"
            Cursor="Hand"
            Click="BackToHome_Click"/>
        </Border>

        <Border
        Width="380"
        Padding="25"
        Background="#AAFFFFFF"
        CornerRadius="12"
        HorizontalAlignment="Center"
        VerticalAlignment="Center">

            <StackPanel>

                <TextBlock Text="Login"
               FontSize="26"
               FontWeight="Bold"
               Margin="0,0,0,20"
               HorizontalAlignment="Center"/>

                <!-- Name -->
                <TextBlock Text="First Name" FontSize="12" Foreground="Gray"/>
                <TextBox Height="35" Margin="0,0,0,2" Padding="8" x:Name="FirstNameTextBox"/>
                <TextBlock x:Name="FirstNameError"
                       FontSize="11"
                       Foreground="Red"
                       Visibility="Hidden"
                       Margin="2,0,0,6"/>

                <TextBlock Text="Last Name" FontSize="12" Foreground="Gray"/>
                <TextBox Height="35" Margin="0,0,0,2" Padding="8" x:Name="LastNameTextBox"/>
                <TextBlock x:Name="LastNameError"
                       FontSize="11"
                       Foreground="Red"
                       Visibility="Hidden"
                       Margin="2,0,0,6"/>

                <!-- email -->
                <TextBlock Text="Email" FontSize="12" Foreground="Gray"/>
                <TextBox Height="35" Margin="0,0,0,2" Padding="8" x:Name="EmailTextBox"/>
                <TextBlock x:Name="EmailError"
                       FontSize="11"
                       Foreground="Red"
                       Visibility="Hidden"
                       Margin="2,0,0,10"/>

                <!-- Create Account -->
                <Button Content="Login" FontSize="20" Click="Login_Click"
                    Height="38"
                    FontWeight="Bold"
                    Background="#FF2D89EF"
                    Foreground="White"/>

                <!-- Dont have an account -->
                <Button Content=" Create an account?"
                    Margin="0,12,0,0"
                    Background="Transparent"
                    BorderThickness="0"
                    Foreground="#FF2D89EF"
                    HorizontalAlignment="Center"
                    Click="BackToRegister_Click"/>

            </StackPanel>
        </Border>
    </Grid>
</Page>
