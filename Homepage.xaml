<Page x:Class="MAINwpfAirportProject.Homepage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MAINwpfAirportProject"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      mc:Ignorable="d"
      Title="Homepage">

    <Grid>

        <!-- background -->
        <Image Source="D:\MAINwpfAirportProject\pictures\darkairportimproved.png"
               Stretch="UniformToFill"/>

        <!-- top row -->
        <Grid Height="70" VerticalAlignment="Top">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <!-- title -->
            <TextBlock Text="SkyLink"
                       FontSize="40"
                       FontWeight="Bold"
                       Foreground="White"
                       VerticalAlignment="Center"
                       Margin="20,0,0,0"/>
           
            <!-- register in white box -->
            <Border Grid.Column="1"
                    Width="120"
                    Height="38"
                    Background="#EFFFFFFF"
                    CornerRadius="10"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center"
                    Margin="0,0,20,0">
                <Button Content="Register"
                        Background="Transparent"
                        BorderThickness="0"
                        FontSize="16"
                        FontWeight="Bold"
                        Foreground="#061A40"
                        Cursor="Hand"
                        Click="RegisterButton_Click"/>
            </Border>
        </Grid>

        <!-- main actions -->
        <Grid HorizontalAlignment="Center"
              VerticalAlignment="Center"
              Margin="40,90,40,40"
              MaxWidth="1000"
              MinWidth="600">

            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition Height="24"/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="24"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Grid.Resources>

                <!-- tile border style and hover border -->
                <Style x:Key="TileBorderStyle" TargetType="Border">
                    <Setter Property="Background" Value="#CFFFFFFF"/>
                    <Setter Property="CornerRadius" Value="18"/>
                    <Setter Property="Padding" Value="25"/>
                    <Setter Property="BorderThickness" Value="1"/>
                    <Setter Property="BorderBrush" Value="Transparent"/>
                    <Style.Triggers>
                 <!--Triggers change the style when a condition is true-->
                        <!--  כלומר הוא הבן שלוBorder נמצא בתוך Button -->
                        <!--צריך לבדוק אם העכבר מעל הכפתור, ובשביל זה הולכים לאבא לכפתור-->
                        <DataTrigger Binding="{Binding IsMouseOver, RelativeSource={RelativeSource AncestorType=Button}}"                                    
                                     Value="True">
                            <Setter Property="BorderBrush" Value="White"/>
                            <!--אם מה שיש בבינדינג הוא אמת אז תעשה את מה שבסטר-->
                        </DataTrigger>
                    </Style.Triggers>
                </Style>

            </Grid.Resources>

            <!-- Arrivals -->
            <Button Grid.Row="0" Grid.Column="0"
                    Background="Transparent"
                    BorderBrush="Transparent"
                    BorderThickness="0"
                    Padding="0"
                    HorizontalContentAlignment="Stretch"
                    VerticalContentAlignment="Stretch"
                    FocusVisualStyle="{x:Null}"
                    Cursor="Hand"
                    Click="Arrivals_Click">
                <Border Style="{StaticResource TileBorderStyle}">
                    
                    <StackPanel>
                        <materialDesign:PackIcon Kind="AirplaneLanding"
                             Width="30" Height="30"
                             HorizontalAlignment="Center"
                             Margin="0,0,0,8"/>
                        <TextBlock Text="Arrivals"
                                   FontSize="24"
                                   FontWeight="Bold"
                                   HorizontalAlignment="Center"
                                   />
                        <TextBlock Text="Live arrival flights"
                                   FontSize="14"
                                   Foreground="#666"
                                   Margin="0,8,0,0"
                                   HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>
            </Button>

            <!-- Departures -->
            <Button Grid.Row="0" Grid.Column="2"
                    Background="Transparent"
                    BorderBrush="Transparent"
                    BorderThickness="0"
                    Padding="0"
                    HorizontalContentAlignment="Stretch"
                    VerticalContentAlignment="Stretch"
                    FocusVisualStyle="{x:Null}"
                    Cursor="Hand"
                    Click="Departures_Click">
                <Border Style="{StaticResource TileBorderStyle}">
                    <StackPanel>
                        <materialDesign:PackIcon Kind="AirplaneTakeoff"
      Width="30" Height="30"
      HorizontalAlignment="Center"
      Margin="0,0,0,8"/>
                        <TextBlock Text="Departures"
                                   FontSize="24"
                                   FontWeight="Bold"
                                   HorizontalAlignment="Center"/>
                        <TextBlock Text="Scheduled and delayed flights"
                                   FontSize="14"
                                   Foreground="#666"
                                   Margin="0,8,0,0"
                                   HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>
            </Button>

            <!-- Flight Status -->
            <Button Grid.Row="2" Grid.Column="0"
                    Background="Transparent"
                    BorderBrush="Transparent"
                    BorderThickness="0"
                    Padding="0"
                    HorizontalContentAlignment="Stretch"
                    VerticalContentAlignment="Stretch"
                    FocusVisualStyle="{x:Null}"
                    Cursor="Hand"
                    Click="FlightStatus_Click">
                <Border Style="{StaticResource TileBorderStyle}">
                    <StackPanel>
                        <materialDesign:PackIcon Kind="ClockOutline"
      Width="30" Height="30"
      HorizontalAlignment="Center"
      Margin="0,0,0,8"/>
                        <TextBlock Text="Flight Status"
                                   FontSize="24"
                                   FontWeight="Bold"
                                   HorizontalAlignment="Center"/>
                        <TextBlock Text="Search by flight number"
                                   FontSize="14"
                                   Foreground="#666"
                                   Margin="0,8,0,0"
                                   HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>
            </Button>

            <!-- Find Airport -->
            <Button Grid.Row="2" Grid.Column="2"
                    Background="Transparent"
                    BorderBrush="Transparent"
                    BorderThickness="0"
                    Padding="0"
                    HorizontalContentAlignment="Stretch"
                    VerticalContentAlignment="Stretch"
                    FocusVisualStyle="{x:Null}"
                    Cursor="Hand"
                    Click="AirportSearch_Click">
                <Border Style="{StaticResource TileBorderStyle}">
                    <StackPanel>
                        <materialDesign:PackIcon Kind="Magnify"
      Width="30" Height="30"
      HorizontalAlignment="Center"
      Margin="0,0,0,8"/>
                        <TextBlock Text="Find Airport"
                                   FontSize="24"
                                   FontWeight="Bold"
                                   HorizontalAlignment="Center"/>
                        <TextBlock Text="Flights to/from an airport"
                                   FontSize="14"
                                   Foreground="#666"
                                   Margin="0,8,0,0"
                                   HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>
            </Button>

        </Grid>

    </Grid>
</Page>