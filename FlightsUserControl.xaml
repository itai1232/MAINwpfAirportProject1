<UserControl x:Class="MAINwpfAirportProject.FlightsUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MAINwpfAirportProject"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Border BorderBrush="#DDDDDD"
            BorderThickness="0,0,0,1"
            Padding="8">

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1.5*"/>
                <ColumnDefinition Width="1.5*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- From -->
            <TextBlock x:Name="fromText"/>

            <!-- To -->
            <TextBlock x:Name="toText" Grid.Column="1"/>

            <!-- Takeoff -->
            <TextBlock x:Name="takeOffText" Grid.Column="2"/>

            <!-- Arrival -->
            <TextBlock x:Name="arrivalText" Grid.Column="3"/>

            <!-- Plane type -->
            <TextBlock x:Name="planeText" Grid.Column="4"/>
        </Grid>

    </Border>
</UserControl>
